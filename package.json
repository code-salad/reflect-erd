{
  "name": "vsequel",
  "version": "3.0.0",
  "description": "A CLI tool for extracting database schemas and generating ERD diagrams from PostgreSQL and MySQL databases",
  "keywords": [
    "erd",
    "database",
    "schema",
    "plantuml",
    "postgresql",
    "mysql",
    "cli"
  ],
  "homepage": "https://github.com/code-salad/vsequel#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code-salad/vsequel.git"
  },
  "scripts": {
    "encrypt": "dotenvx encrypt",
    "decrypt": "dotenvx decrypt",
    "format": "npx ultracite format",
    "lint": "npx ultracite lint",
    "seed": "npx tsx seeds/setup.ts",
    "build": "rm -rf dist && npx tsc",
    "prepublishOnly": "npm run build",
    "test": "npx tsx --test $(find src -name '*.spec.ts' 2>/dev/null || echo '')",
    "test:ee": "docker compose -f test-ee/docker-compose.yml up -d --wait && npm run seed && npx tsx --test $(find test-ee -name '*.spec.ts') && docker compose -f test-ee/docker-compose.yml down",
    "test:docker": "docker compose -f test-ee/docker-compose.yml up -d --wait && npx tsx seeds/setup.ts && npx tsx --test test-ee/docker-integration.spec.ts && docker compose -f test-ee/docker-compose.yml down"
  },
  "license": "MIT",
  "author": "vikyw89@gmail.com",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vsequel": "dist/cli/index.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "src/**/*.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "cmd-ts": "^0.14.1",
    "mysql2": "^3.14.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@dotenvx/dotenvx": "^1.48.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@tsconfig/recommended": "^1.0.10",
    "@types/node": "^24.2.1",
    "lefthook": "^1.12.2",
    "semantic-release": "^24.2.7",
    "tsx": "^4.20.5",
    "ultracite": "5.1.2",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
